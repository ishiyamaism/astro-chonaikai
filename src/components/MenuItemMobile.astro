---
interface Props {
  caption: string;
  subMenu?: string[];
}

const { caption, subMenu } = Astro.props;
---

<div
  id="sub-menu-item"
  class="group relative text-center h-full cursor-pointer items-center justify-center py-4 hover:bg-amber-700 hover:bg-white/10 transition-colors"
>
  <span class={subMenu ? `` : `font-bold`}>
    {caption}
  </span>
  {
    subMenu ? (
      <div class="mt-2 group-open:block">
        {subMenu.map((sub) => (
          <div class="relative text-center font-bold py-4 hover:text-zinc-200-200 hover:bg-white/5 transition-colors ease-in-out ">
            <span>{sub}</span>
          </div>
        ))}
      </div>
    ) : null
  }
</div>
